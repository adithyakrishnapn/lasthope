<section style="padding-top: 70px; padding-bottom: 70px;background-color: rgb(74, 74, 74);">
    {{#if foundItem}}
    <hr>
    <div style="display: flex;">
        <h6 style="color: white;">Topic :</h6>
        <h6 style="font-weight: 500; color:white">Found Items</h6>
    </div>
    <hr>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6">
                <img src="/product-images/{{foundItem._id}}.jpg" width="200px" alt="{{foundItem.category}}"
                    onerror="this.onerror=null;this.src='/images/google-docs.png';">
            </div>
            <div class="col-md-6" style="padding-top: 10%;">
                <h1 class="product-name" style="color: white;">{{foundItem.category}}</h1>
                <div class="price">{{foundItem.number}}</div>
                <div class="price">{{foundItem.name}}</div>
                <p class="product-description" style="color: white;">
                    {{foundItem.review}}
                </p>
                {{#if foundItem.complete}}
                <center>
                    <h2 style="background-color: orange; padding: 10px;">COMPLETED</h2>
                </center>
                {{else}}
                <center><a href="/chat/found{{foundItem._id}}" class="btn btn-primary btn-lg mt-3">Chat</a></center>
                {{/if}}
            </div>
        </div>
    </div>
    {{else if lostItem}}
    <hr>
    <div style="display: flex;">
        <h6 style="color: white;">Topic :</h6>
        <h6 style="font-weight: 500; color:white">Lost Items</h6>
    </div>
    <hr>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6">
                <img src="/product-images/{{lostItem._id}}.jpg" width="100%" alt="{{lostItem.category}}"
                    onerror="this.onerror=null;this.src='/images/google-docs.png';">

            </div>
            <div class="col-md-6" style="padding-top: 10%;">
                <h1 class="product-name" style="color: white;">{{lostItem.category}}</h1>
                <div class="price">{{lostItem.number}}</div>
                <div class="price">{{lostItem.name}}</div>
                <p class="product-description" style="color: white;">
                    {{lostItem.review}}
                </p>
                {{#if lostItem.complete}}
                <center>
                    <h2 style="background-color: orange; padding: 10px;">COMPLETED</h2>
                </center>
                {{else}}
                <center><a href="/chat/product{{lostItem._id}}" class="btn btn-primary btn-lg mt-3">Chat</a></center>
                {{/if}}
            </div>
        </div>
    </div>
    {{else}}
    <div class="container mt-5">
        <h2>Oops....No data found</h2>
    </div>
    {{/if}}
</section>